    text-shadow: 0 0 12px rgba(255, 255, 255, 0.2);

    background: -webkit-linear-gradient(-80deg, #eee, #360b3d);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin: 0;

    z-index: 10001;
  }

  #loading .tv {
    font-size: 5rem;
